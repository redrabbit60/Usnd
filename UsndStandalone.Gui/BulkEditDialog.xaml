<Window x:Class="UsndStandalone.Gui.BulkEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="一括編集"
        Height="450"
        Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#101822"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Foreground="White"
                   FontSize="14"
                   Margin="0,0,0,15">
            <Run Text="選択中:"/>
            <Run x:Name="SelectionCountText" FontWeight="Bold"/>
            <Run Text="個のラベルを一括編集"/>
        </TextBlock>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Volume -->
                <CheckBox x:Name="VolumeCheckBox"
                          Content="Volume"
                          Foreground="White"
                          FontSize="13"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="VolumeTextBox"
                         Height="28"
                         Margin="0,0,0,15"
                         IsEnabled="{Binding ElementName=VolumeCheckBox, Path=IsChecked}"/>

                <!-- CategoryName -->
                <CheckBox x:Name="CategoryNameCheckBox"
                          Content="CategoryName"
                          Foreground="White"
                          FontSize="13"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="CategoryNameTextBox"
                         Height="28"
                         Margin="0,0,0,15"
                         IsEnabled="{Binding ElementName=CategoryNameCheckBox, Path=IsChecked}"/>

                <!-- Priority -->
                <CheckBox x:Name="PriorityCheckBox"
                          Content="Priority"
                          Foreground="White"
                          FontSize="13"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="PriorityTextBox"
                         Height="28"
                         Margin="0,0,0,15"
                         IsEnabled="{Binding ElementName=PriorityCheckBox, Path=IsChecked}"/>

                <!-- Loop -->
                <CheckBox x:Name="LoopCheckBox"
                          Content="Loop"
                          Foreground="White"
                          FontSize="13"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="LoopTextBox"
                         Height="28"
                         Margin="0,0,0,15"
                         IsEnabled="{Binding ElementName=LoopCheckBox, Path=IsChecked}"/>

                <!-- Pan -->
                <CheckBox x:Name="PanCheckBox"
                          Content="Pan"
                          Foreground="White"
                          FontSize="13"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="PanTextBox"
                         Height="28"
                         Margin="0,0,0,15"
                         IsEnabled="{Binding ElementName=PanCheckBox, Path=IsChecked}"/>

                <!-- Pitch -->
                <CheckBox x:Name="PitchCheckBox"
                          Content="Pitch"
                          Foreground="White"
                          FontSize="13"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="PitchTextBox"
                         Height="28"
                         Margin="0,0,0,15"
                         IsEnabled="{Binding ElementName=PitchCheckBox, Path=IsChecked}"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="適用"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="ApplyButton_Click"/>
            <Button Content="キャンセル"
                    Width="80"
                    Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
